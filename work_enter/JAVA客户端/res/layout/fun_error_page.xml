<?xml version="1.0" encoding="utf-8"?>
<!-- 错误提示页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fun_error_page_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/fun_error_page_head_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/fun_top_bg" >

        <TextView
            android:id="@+id/fun_error_page_hint_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="测试"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <ImageButton
            android:id="@+id/fun_error_page_back_game_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/fun_top_button_default"
            android:gravity="center"
           />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/fun_error_page_bg"
                android:src="@drawable/fun_error_page" />

            <Button
                android:id="@+id/fun_error_page_btn"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="#999999"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>